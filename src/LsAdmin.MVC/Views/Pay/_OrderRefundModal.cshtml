<!-- 模态框（Modal） -->
<div class="modal fade" id="orderRefundModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">买家申请退款</h4>
            </div>
            <form class="form-horizontal" enctype='multipart/form-data' asp-action="ApplyRefund" asp-controller="Order">
                <div class="modal-body">
                    <input type="hidden" id="OrderId" name="OrderId"/>
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="Name">退款订单：</label>
                            <div class="col-sm-9">
                                <input class="form-control" name="Name" id="Name" type="text" placeholder="名称" disabled>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="Name">退款金额：</label>
                            <div class="col-sm-9">
                                <input class="form-control" name="Amount" id="Amount" type="text" placeholder="退款金额" disabled>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="ApplyRefundReason">退款说明：</label>
                            <div class="col-sm-9">
                                <textarea id="ApplyRefundReason" name="ApplyRefundReason" class="form-control" rows="3"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="pull-right box-tools">
                            <button id="btnSave" class="btn btn-primary" type="button">提交申请</button>
                            <button class="btn btn-default" type="button" data-dismiss="modal">取消退款</button>
                        </div>
                    </div>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>
<!-- /.modal -->