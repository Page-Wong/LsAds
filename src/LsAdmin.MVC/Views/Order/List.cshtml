@{
    ViewBag.CurrentMenu = "OrderList";
}

@Html.Partial("/Views/Pay/_OrderRefundModal.cshtml")
@Html.Partial("/Views/Pay/_PayModal.cshtml")
<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">我的订单</h3>
                <div class="pull-right box-tools">
                    <a id="btnAdd11" class="btn btn-primary" type="button" data-original-title="新建订单(小型)" data-toggle="tooltip" data-widget="" href="/Order/Index">
                        <i class="fa fa-plus-square"></i>&nbsp;&nbsp;新建订单(小型)
                    </a>
                    <a id="btnAdd12" class="btn btn-primary" type="button" data-original-title="新建订单(大型)" data-toggle="tooltip" data-widget="" href="/Order/showEquipments">
                        <i class="fa fa-plus-square"></i>&nbsp;&nbsp;新建订单(大型)
                    </a>
                    <!--<button id="btnDelete" title="" class="btn btn-danger" type="button" data-original-title="删除订单" data-toggle="tooltip" data-widget="">
                        <i class="fa fa-times"></i>&nbsp;&nbsp;批量删除
                    </button>-->
                </div>
            </div>
            <div class="box-body">
                <div class="table-scrollable">
                    <table id="mediaTable" class="table table-striped table-bordered table-hover dataTable no-footer" role="grid" aria-describedby="sample_2_info">
                        <thead>
                            <tr role="row">
                                <th class="table-checkbox" style="width:40px;text-align:center;"><input id="checkAll" class="group-checkable" type="checkbox"></th>
                                <th tabindex="0" aria-label="">
                                    状态
                                </th>
                                <th tabindex="0" aria-label="">
                                    名称
                                </th>
                                <th tabindex="0" aria-label="">
                                    广告时长（秒）
                                </th>
                                <th tabindex="0" aria-label="">
                                    金额
                                </th>
                                <th tabindex="0" style="width: 280px;" aria-label="">
                                    操作
                                </th>
                            </tr>
                        </thead>
                        <tbody id="tableBody"></tbody>
                    </table>
                    <div class="paging-toolbar">
                        <ul id="grid_paging_part"></ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("OrderInfo")
@section css{
    <link rel="stylesheet" href="~/lib/bootstrap-fileinput/css/fileinput.min.css">
    <link rel="stylesheet" href="~/css/order.css">
}
@section scripts{
    <script src="~/lib/bootstrap-fileinput/js/fileinput.min.js"></script>
    <script src="~/lib/bootstrap-fileinput/js/locales/zh.js"></script>
    <script src="~/lib/bootstrap-paginator/build/bootstrap-paginator.min.js"></script>
    <script src="~/Views/Order/List.js"></script>
}