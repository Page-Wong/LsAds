@{
    ViewBag.CurrentMenu = "ProgramReview";
}
<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">播放管理</h3>
            </div>
            <div class="box-body">
                <div class="table-scrollable">
                    <table id="mediaTable" class="table table-striped table-bordered table-hover dataTable no-footer" role="grid" aria-describedby="sample_2_info">
                        <thead>
                            <tr role="row">
                                <th tabindex="0" aria-label="" style="width: 30px" hidden>
                                    #
                                </th>
                                <th tabindex="0" aria-label="">
                                    名称
                                </th>
                                <th tabindex="0" aria-label="" style="width: 100px">
                                    持续时间(秒)
                                </th>
                                <th tabindex="0" aria-label="">
                                    备注
                                </th>
                                <th tabindex="0" style="width: 100px;" aria-label="">
                                    审核结果
                                </th>
                                <th tabindex="0" style="width: 160px;" aria-label="">
                                    操作
                                </th>
                            </tr>
                        </thead>
                        <tbody id="tableBody"></tbody>
                    </table>
                    <div class="paging-toolbar">
                        <ul id="grid_paging_part"></ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("_Play")

@section css{
    <link rel="stylesheet" href="~/lib/bootstrap-fileinput/css/fileinput.min.css">
}
@section scripts{
<script src="~/Views/ProgramReview/Index.js"></script>
    <script src="~/lib/bootstrap-fileinput/js/fileinput.min.js"></script>
    <script src="~/lib/bootstrap-fileinput/js/locales/zh.js"></script>
    <script src="~/lib/bootstrap-paginator/build/bootstrap-paginator.min.js"></script>
}
