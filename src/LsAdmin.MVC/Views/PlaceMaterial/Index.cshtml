@{
    ViewBag.CurrentMenu = "PlaceMaterial";
}
<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">我上传的所有素材</h3>
                <div class="pull-right box-tools">
                    <button id="btnAdd" class="btn btn-primary" type="button" data-original-title="新增素材" data-toggle="tooltip" data-widget="">
                        <i class="fa fa-plus-square"></i>&nbsp;&nbsp;上传
                    </button>
                    <button id="btnDelete" title="" class="btn btn-danger" type="button" data-original-title="删除素材" data-toggle="tooltip" data-widget="">
                        <i class="fa fa-times"></i>&nbsp;&nbsp;批量删除
                    </button>
                    
                </div>
            </div>
            <div class="box-body">
                <div class="table-scrollable">
                    <table id="mediaTable" class="table table-striped table-bordered table-hover dataTable no-footer" role="grid" aria-describedby="sample_2_info">
                        <thead>
                            <tr role="row">
                                <th class="table-checkbox" style="width:40px;text-align:center;"><input id="checkAll" class="group-checkable" type="checkbox"></th>
                                <th tabindex="0" aria-label="" style="width: 300px;">
                                    名称
                                </th>             
                                <th tabindex="0" aria-label="" style="width: 300px;">
                                    备注
                                </th>
                                <th tabindex="0" style="width: 300px;" aria-label="">
                                    操作
                                </th>
                            </tr>
                        </thead>
                        <tbody id="tableBody"></tbody>
                    </table>
                    <div class="paging-toolbar">
                        <ul id="grid_paging_part"></ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">我想要播放的素材</h3>
                <div class="pull-right box-tools">               
                    <button id="btnDeleteSelect" title="" class="btn btn-danger" type="button" data-original-title="删除素材" data-toggle="tooltip" data-widget="">
                        <i class="fa fa-times"></i>&nbsp;&nbsp;批量删除
                    </button>
                </div>
                <div class="box-body">
                    <div class="table-scrollable">
                        <table id="selectmediaTable" class="table table-striped table-bordered table-hover dataTable no-footer" role="grid" aria-describedby="sample_2_info">
                            <thead>
                                <tr role="row">
                                    <th class="table-checkbox" style="width:40px;text-align:center;"><input id="selectcheckAll" class="group-checkable" type="checkbox"></th>
                                    <th tabindex="0" aria-label="" style="width: 300px;">
                                        名称
                                    </th>                                  
                                    <th tabindex="0" aria-label="" style="width: 300px;">
                                        备注
                                    </th>
                                    <th tabindex="0" style="width: 300px;" aria-label="">
                                        操作
                                    </th>
                                </tr>
                            </thead>
                            <tbody id="selecttableBody"></tbody>
                        </table>
                        <div class="paging-toolbar">
                            <ul id="selectgrid_paging_part"></ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("_Edit")
@Html.Partial("_Upload")
@Html.Partial("_Play")
@Html.Partial("_SelectEdit")

@section css{
    <link rel="stylesheet" href="~/lib/bootstrap-fileinput/css/fileinput.min.css">
    <!--<link rel="stylesheet" href="~/lib/bootstrap-paginator/css/bootstrapv3.min.css">-->
}
@section scripts{
    <script src="~/Views/PlaceMaterial/Index.js"></script>
    <script src="~/lib/bootstrap-fileinput/js/fileinput.min.js"></script>
    <script src="~/lib/bootstrap-fileinput/js/locales/zh.js"></script>
    <script src="~/lib/bootstrap-paginator/build/bootstrap-paginator.min.js"></script>
}