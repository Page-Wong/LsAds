@model List<LsAdmin.Application.ProgramApp.Dtos.ProgramDto>

<div class="table-scrollable">
    <input hidden value="@ViewBag.RowCount" name="rowCount" />
    <input hidden value="@ViewBag.PageCount" name="pageCount" />
    <table id="programTable" class="table table-striped table-bordered table-hover dataTable no-footer" role="grid" aria-describedby="sample_2_info">
        <thead>
            <tr role="row">
                <th tabindex="0" aria-label="" style="width: 30px">
                    #
                </th>
                <th class="table-checkbox" style="width:40px;text-align:center;"><input id="checkAll" class="group-checkable" type="checkbox"></th>
                <th tabindex="0" aria-label="">
                    名称
                </th>
                <th tabindex="0" aria-label="" style="width: 120px">
                    持续时间
                </th>
                <th tabindex="0" aria-label="" style="width: 80px">
                    尺寸
                </th>
                <th tabindex="0" style="width: 230px;" aria-label="">
                    操作
                </th>
            </tr>
        </thead>
        <tbody id="tableBody">
            @{
                var i = 1;
                foreach (var item in Model) {
                    ViewBag.RowIndex = i++;
                    @Html.Partial("_ProgramTr", item)
                }
            }
        </tbody>
    </table>
    <div class="paging-toolbar">
        <ul id="grid_paging_part"></ul>
    </div>
</div>