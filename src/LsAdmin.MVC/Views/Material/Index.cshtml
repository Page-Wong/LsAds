@{
    ViewBag.CurrentMenu = "Material";
}
<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">素材管理</h3>
                <div class="pull-right box-tools">
                    <button id="btnAddMaterial" class="btn btn-primary" type="button" data-original-title="新增素材" data-toggle="tooltip" data-widget="">
                        <i class="fa fa-plus-square"></i>&nbsp;&nbsp;上传
                    </button>
                    <button id="btnDeleteMaterial" title="" class="btn btn-danger" type="button" data-original-title="批量删除素材" data-toggle="tooltip" data-widget="">
                        <i class="fa fa-times"></i>&nbsp;&nbsp;批量删除
                    </button>
                </div>
            </div>
            <div class="box-body">
                <div class="table-scrollable">
                    <table id="mediaTable" class="table table-striped table-bordered table-hover dataTable no-footer" role="grid" aria-describedby="sample_2_info">
                        <thead>
                            <tr role="row">
                                <th tabindex="0" aria-label="" style="width: 30px">
                                    #
                                </th>
                                <th class="table-checkbox" style="width:40px;text-align:center;"><input id="checkAllMaterial" class="group-checkable" type="checkbox"></th>
                                <th tabindex="0" aria-label="" >
                                    名称
                                </th>
                                <th tabindex="0" aria-label="" style="width: 80px">
                                    素材类型
                                </th>
                                <th tabindex="0" aria-label="" style="width: 120px">
                                    持续时间
                                </th>
                                <th tabindex="0" aria-label="">
                                    备注
                                </th>
                                <th tabindex="0" style="width: 230px;" aria-label="">
                                    操作
                                </th>
                            </tr>
                        </thead>
                        <tbody id="tableBody"></tbody>
                    </table>
                    <div class="paging-toolbar">
                        <ul id="grid_paging_part"></ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("_Edit")
@Html.Partial("_Upload")
@Html.Partial("_Play")

@section css{
    <link rel="stylesheet" href="~/lib/bootstrap-fileinput/css/fileinput.min.css">
    <!--<link rel="stylesheet" href="~/lib/bootstrap-paginator/css/bootstrapv3.min.css">-->
}
@section scripts{
<script src="~/Views/Material/Index.js"></script>
    <script src="~/lib/bootstrap-fileinput/js/fileinput.min.js"></script>
    <script src="~/lib/bootstrap-fileinput/js/locales/zh.js"></script>
    <script src="~/lib/bootstrap-paginator/build/bootstrap-paginator.min.js"></script>
}
