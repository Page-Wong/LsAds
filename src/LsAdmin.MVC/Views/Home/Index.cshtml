@{
    ViewBag.CurrentMenu = "HomePage";
}

<div class="row">
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-aqua">
            <div class="inner">
                <h3 id="PlayTotal">0</h3>
                <p>广告总播放次数</p>
            </div>
            <div class="icon">
                <i class="ion ion-flag"></i>
            </div>
            <a href="#" class="small-box-footer">点击查看更多 <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-green">
            <div class="inner">
                <h3 id="OrderTotal">0</h3>
                <p>广告总数</p>
            </div>
            <div class="icon">
                <i class="ion ion-android-list"></i>
            </div>
            <a href="/Order/List" class="small-box-footer">点击查看更多 <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-yellow">
            <div class="inner">
                <h3 id="OrderRunningCount">0</h3>
                <p>推广中的广告</p>
            </div>
            <div class="icon">
                <i class="ion ion-monitor"></i>
            </div>
            <a href="/Order/List" class="small-box-footer">点击查看更多 <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-red">
            <div class="inner">
                <h3 id="OrderCompleteCount">0</h3>
                <p>推广完成的广告</p>
            </div>
            <div class="icon">
                <i class="ion ion-android-cloud-done"></i>
            </div>
            <a href="/Order/List" class="small-box-footer">点击查看更多 <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
</div>
<div class="row">
    <div class="col-md-8">

        @Html.Partial("/Views/Home/_MoreInfo.cshtml")
    </div>
    <!-- /.col -->
    <div class="col-md-4">
        @Html.Partial("/Views/Home/_UserGuide.cshtml")
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
<div class="row">
    @Html.Partial("/Views/Home/_OrderExample.cshtml")
</div>
@section css{<!-- Ionicons -->
    <link rel="stylesheet" href="~/lib/ionicons/css/ionicons.min.css">

}
@section scripts{
    <script>
        $(function () {
            $.get(
                '/Home/InitData',
                {},
                function (data) {
                    if (data.result == 'Success') {
                        $('#PlayTotal').html(data.data.playTotal);
                        $('#OrderTotal').html(data.data.orderTotal);
                        $('#OrderRunningCount').html(data.data.orderRunningCount);
                        $('#OrderCompleteCount').html(data.data.orderCompleteCount);
                    }
                }
            );
        });

    </script>
}